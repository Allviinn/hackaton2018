@model SP.MVC.Models.HomeModel

@{
    ViewBag.Title = "ListEvenementsParcelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Référentiel évènements</h2>

<p>
    @Html.ActionLink("Create New", "AddEvenementParcelle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.EvenementParcelle.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.EvenementParcelle.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.EvenementParcelles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEvenementParcelle", new { id = item.IdEvenementParcelle }) |
                @Html.ActionLink("Delete", "DeleteEvenementParcelle", new { id = item.IdEvenementParcelle })
            </td>
        </tr>
    }

</table>
